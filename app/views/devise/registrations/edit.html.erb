<section>
  <div class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="wrapper">
              <div class="title section columns is-centered">
                <h2>アカウント編集</h2>
              </div>

              <div class="field">
                <%= f.label :メールアドレス %><br />
                <%= f.email_field :email, autocomplete: "email", class: "input" %>
              </div>

              <div class="field">
                <%= f.label :パスワード %><br />
                <%= f.password_field :password, autocomplete: "new-password", :placeholder => "6文字以上で入力してください", class: "input" %>
              </div>

              <div class="field">
                <%= f.label :パスワード確認 %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
              </div>

              <div class="field">
                <%= f.label :現在のパスワードを入力してください %><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
              </div>
            
              <div class="actions">
                <%= f.submit "保存", class: "button is-success" %>
              </div>

              <div class="actions">
                <%= link_to "キャンセル", account_path, class: "button" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>