<section>
  <div class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="flash_message"><%= render "devise/shared/error_messages", resource: resource %></div>
            <div class="wrapper">
              <div class="title section columns is-centered">
                <h2>新規登録</h2>
              </div>
                
              <div class="field">
                <%= f.label :ユーザー名, autocomplete: "email", class: "font_weight" %><span class="required_mark">※</span>
                <%= f.text_field :username, class: "input" %>
              </div>
                
              <div class="field">
                <%= f.label :メールアドレス, class: "font_weight" %><span class="required_mark">※</span>
                  <%= f.email_field :email, autocomplete: "email", class: "input" %>
              </div>

              <div class="field">
                <%= f.label :パスワード, class: "font_weight" %><span class="required_mark">※</span>
                <%= f.password_field :password, autocomplete: "new-password", :placeholder => "6文字以上で入力してください", class: "input" %>
              </div>

              <div class="field">
                <%= f.label :パスワード確認, class: "font_weight" %><span class="required_mark">※</span>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "もう一度パスワードを入力してください", class: "input" %>
              </div>

              <div class="actions">
                <%= f.submit "新しいアカウントを作成する", class: "button is-success" %>
              </div>

              <div class="actions">
                <%= link_to "アカウントをお持ちの方はログイン", new_user_session_path, class: "button" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
