<div class="search_container">
  <div class="half">
    <%= form_tag(rooms_path, :method => "get") do %>
      <div class="search_form">
        <%= text_field_tag :search, "", placeholder: "地域を入力" %>
      </div>
      <div>
        <%= submit_tag "エリアを検索", :place => nil, class: "button" %>
      </div>
    <% end %>
  </div>
</div>

<div>
  <div>エリア検索</div>
</div>





<%= link_to current_user do %>
  <div>
