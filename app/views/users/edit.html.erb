<section>
  <div class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <div class="wrapper">
            <%= form_for @user do |f| %>
              <div class="title section columns is-centered">
                <h2>プロフィール編集</h2>
              </div>

              <div class="field">
                <p><%= f.label :プロフィール画像, class: "label" %></p>
                <div class="select_image">
                  <p><%= attachment_image_tag current_user, :profile_image, fallback: "no-image.png" %></p>
                  <label class="file_upload"><%= f.file_field :profile_image %>画像をアップロード</label>
                </div>
              </div>

              <div class="field">
                <%= f.label :ユーザーネーム, class: "label" %>
                <%= f.text_field :username, class: "input" %>
              </div>

              <div class="field">
                <%= f.label :自己紹介, class: "label" %>
                <%= f.text_area :profile, class: "input" %>
              </div>

              <div>
                <%= f.submit "保存", class: "button is-success" %>
                <%= link_to "戻る", current_user, class: "button" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
