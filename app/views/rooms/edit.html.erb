<section>
  <div class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <div class="wrapper">
            <%= form_for @room do |f|%>
              <div class="title section columns is-centered">
                <h2>施設情報の編集</h2>
              </div>

              <div class="field">
                <%= f.label :施設名, class: "font_weight" %><span class="required_mark">※入力必須</span>
                <%= f.text_field :room_name, class: "input", placeholder: "ルーム名を入力" %>
              </div>

              <div class="field">
                <%= f.label :施設紹介, class: "font_weight" %><span class="required_mark">※入力必須</span>
                <%= f.text_area :room_details, class: "input", placeholder: "施設紹介を入力" %>
              </div>

              <div class="field">
                <%= f.label :宿泊料金, class: "font_weight" %><span class="required_mark">※入力必須</span>
                <%= f.text_field :price, class: "input", placeholder: "1日あたりの料金を入力" %>
              </div>

              <div class="field">
                <%= f.label :住所, class: "font_weight" %><span class="required_mark">※入力必須</span>
                <%= f.text_field :place, class: "input", placeholder: "住所を入力" %>
              </div>

              <div class="field">
                <%= f.label :施設画像, class: "label" %>
                <label class="file_upload"><%= f.file_field :image %>画像をアップロード</label>
              </div>
              
              <div class="actions">
                <%= f.submit "保存", class: "button is-success" %>
              </div>
              
              <div class="actions">
                <%= link_to "キャンセル", :back, class: "button" %>
              </div>

              <div class="actions delete_message">
                <div>施設の削除</div>
                <%= link_to "削除する", room_path(@room), method: :delete, data: { confirm: 'この操作は取り消せません！本当に削除してもよろしいですか?' }  %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

