<section>
  <% if current_user == nil %>
    <div class="section">
      <div class="container">
        <div class="columns is-centered">
          <div class="column is-6">
            <div class="title section columns is-centered under_line">
              <h2>施設詳細</h2>
            </div>
            <div class="field select_image">
              <%= attachment_image_tag @room, :image, fallback: "no-image.png", class: "image" %>
            </div>

            <div class="field select_image  under_line">
              <%= @room.room_name %>
            </div>

            <div class="field">
              <%= @room.price %>
            </div>

            <div class="field">
              <%= @room.price %>
            </div>

            <div class="field">
              <%= @room.room_details %>
            </div>
            <%= link_to "施設一覧", rooms_path, class: "button is-success" %>
          </div>
        </div>
      </div>
    </div>

  <% else %>

    <% if @room.user.id != current_user.id %>
      <div class="section">
        <div class="container">
          <div class="option_content">
            <div class="columns is-centered">
              <div class="column is-6">
                <div class="title section under_line">
                  <h2>施設詳細</h2>
                </div>
                
                <div class="field select_image">
                  <%= attachment_image_tag @room, :image, fallback: "no-image.png", class: "image" %>
                </div>

                <div class="field select_image  under_line">
                  <%= @room.room_name %>
                </div>

                <div class="field">
                  <%= @room.price %>
                </div>

                <div class="field">
                  <%= @room.price %>
                </div>

                <div class="field">
                  <%= @room.room_details %>
                </div>

                <%= link_to "施設一覧", rooms_path, class: "button is-success" %>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% else %>

      <div class="section">
        <div class="container">
          <div class="option_flame is-centered">
          <% if @room.user.id == current_user.id %>
              <div class="option_content">
                <p class="title section">設定</p>
              </div>
              
              <div class="option_content">
                <div class="title section under_line">
                  <h2>施設詳細</h2>
                </div>
                      
                <div class="field select_image">
                  <%= attachment_image_tag @room, :image, fallback: "no-image.png", class: "image" %>
                </div>

                <div class="field select_image  under_line">
                  <%= @room.room_name %>
                </div>

                <div class="field">
                  <%= @room.price %>
                </div>

                <div class="field">
                  <%= @room.price %>
                </div>

                <div class="field">
                  <%= @room.room_details %>
                </div>

                <%= link_to "施設一覧", rooms_path, class: "button is-success" %>
                <%= link_to "編集", edit_room_path(@room), class: "button is-success" %>
            <% end %>
                

          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</section>