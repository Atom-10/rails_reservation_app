<section>
  <div class="section">
    <div class="title section columns is-centered under_line">
      <h2>施設一覧</h2>
    </div>
    
    <div class=" section">
      <div class="room_container">
        <% @rooms.each do |room|  %>
          <div class="room_content room_flame">
            <div class="room_image  under_line">
              <div class="field">
                <%= attachment_image_tag room, :image, fallback: "no-image.png" %>
              </div>
            </div>
            <div class="section">
              <div class="field room_name">
                <%= room.room_name%>
              </div>

              <div class="field">
                <%= room.place %>
              </div>

              <div class="field room_details">
                <%= room.room_details %>
              </div>

              <div class="field room_show">
                <div class="room_price">
                  <span>¥<%= room.price %>~</span>
                </div>
                <div>
                  <%= link_to "詳細情報", room, class: "button is-success" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</secction>