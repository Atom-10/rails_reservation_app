<section>
  <div class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <div class="wrapper">
            <%= form_for @reservation do |f|%>
              <div class="title section columns is-centered">
                <h2>予約情報の編集</h2>
              </div>

              <div class="reservation_form section">
                <div class="field">
                  <%= f.label :チェックイン, class: "label" %>
                  <%= f.date_field :check_in, required: true, min: Date.current, id: "check-in-date" %>
                </div>

                <div class="field">
                  <%= f.label :チェックアウト, class: "label" %>
                  <%= f.date_field :check_out, required: true, min: f.object.check_in || Date.current, id: "check-out-date" %>
                </div>

                <div class="field">
                  <%= f.label :宿泊人数, class: "label" %>
                  <%= f.text_field :guest, required: true, min: 1, type: "number", placeholder: "人数を入力" %>
                </div>
              </div>

              <div class="validates_message section">
                <div class="required_mark">チェックイン / チェックアウト / 宿泊人数は入力必須項目です</div>
                <div class="required_mark">チェックアウトはチェックイン以降の日付を選択してください</div>
              </div>

              <div class="actions">
                <%= f.submit "変更", data: { confirm: "予約を変更します。よろしいですか？" }, class: "button is-success" %>
              </div>
              
              <div class="actions">
                <%= link_to "キャンセル", reservations_path, class: "button" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
