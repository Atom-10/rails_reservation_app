<h1>Reservations#edit</h1>
<p>Find me in app/views/reservations/edit.html.erb</p>
<section>
  <div class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <div class="wrapper">
            <%= form_for @reservation do |f|%>
              <div class="title section columns is-centered">
                <h2>予約情報の編集</h2>
              </div>

              <div class="field">
                <%= f.label :チェックイン, class: "label" %>
                <%= f.date_field :check_in, class: "input" %>
              </div>

              <div class="field">
                <%= f.label :チェックアウト, class: "label"%>
                <%= f.date_field :check_out, class: "input" %>
              </div>

              <div class="field">
                <%= f.label :宿泊人数, class: "label" %>
                <%= f.number_field :guest, class: "input", placeholder: "宿泊人数を入力" %>
              </div>

              <!-- 他の予約情報を編集するフィールドを追加 -->

              <div class="actions">
                <%= f.submit "保存", class: "button is-success" %>
              </div>
              
              <div class="actions">
                <%= link_to "キャンセル", reservations_path, class: "button" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
